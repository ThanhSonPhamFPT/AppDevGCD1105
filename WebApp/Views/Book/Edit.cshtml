@model BookVM
<p>Edit a book</p>
<form method="post" enctype="multipart/form-data">
	<div class="border p-3 mt-4">
		<input asp-for="Book.Id" hidden/>
		<input asp-for="Book.ImageUrl" hidden />
		<div class="mb-3 row">
			<label asp-for="Book.Title"></label>
			<input asp-for="Book.Title" />
			<span asp-validation-for="Book.Title" class="text-danger"></span>
		</div>
		<div class="mb-3 row">
			<label asp-for="Book.Description"></label>
			<input asp-for="Book.Description" />
			<span asp-validation-for="Book.Description" class="text-danger"></span>
		</div>
		<div class="mb-3 row">
			<label asp-for="Book.Author"></label>
			<input asp-for="Book.Author" />
			<span asp-validation-for="Book.Author" class="text-danger"></span>
		</div>
		<div class="mb-3 row">
			<label asp-for="Book.Price"></label>
			<input asp-for="Book.Price" />
			<span asp-validation-for="Book.Price" class="text-danger"></span>
		</div>
		<div class="mb-3 row">
			<label asp-for="Book.Category"></label>
			<select asp-for="Book.CategoryId" asp-items="@Model.Categories"></select>
		</div>
		<div class="mb-3 row">
			<label asp-for="Book.ImageUrl"></label>
			<input type="file" name="file" class="form-control" />
		</div>
		<button type="submit" class="btn btn-primary">Edit</button>
		<a asp-controller="Book" asp-action="Index" class="btn btn-primary">Back</a>
		<img src="@Model.Book.ImageUrl" sizes="100%"/>
	</div>
</form>